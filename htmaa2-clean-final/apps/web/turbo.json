{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "NEXT_PUBLIC_DESKTOP_URL",
        "NEXT_PUBLIC_TARGET_URL",
        "MAIL_SERVER",
        "MAIL_PORT",
        "MAIL_USER",
        "MAIL_PASS"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": true,
      "persistent": true
    }
  }
}
